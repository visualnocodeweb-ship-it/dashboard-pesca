{
  "version": 2,
  "builds": [
    {
      "src": "dashboard-frontend/package.json",
      "use": "@vercel/static-build",
      "config": { "outputDirectory": "dist" }
    },
    {
      "src": "api.py",
      "use": "@vercel/python",
      "config": { "maxLambdaSize": "15mb", "runtime": "python3.9" }
    }
  ],
  "routes": [
    { "src": "/api/(.*)", "dest": "api.py" },
    { "src": "/", "dest": "dashboard-frontend/dist/index.html" },
    { "src": "/(.*)", "dest": "dashboard-frontend/dist/$1" }
  ],
  "installCommand": "pip install -r requirements.txt && npm install --prefix dashboard-frontend"
}