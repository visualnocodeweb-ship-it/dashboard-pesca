{
  "version": 2,
  "builds": [
    {
      "src": "api.py",
      "use": "@vercel/python",
      "config": {
        "handler": "api.app",
        "runtime": "python3.9"
      }
    },
    {
      "src": "dashboard-frontend/package.json",
      "use": "@vercel/static-build",
      "config": { "outputDirectory": "dist" }
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "api.py"
    },
    {
      "src": "/",
      "dest": "dashboard-frontend/dist/index.html"
    },
    {
      "src": "/(.*)",
      "dest": "dashboard-frontend/dist/$1"
    }
  ]
}