{
  "version": 2,
  "builds": [
    {
      "src": "dashboard-frontend/package.json",
      "use": "@vercel/static-build",
      "config": {
        "buildCommand": "npm run build"
      }
    },
    {
      "src": "api/index.py", # Apuntamos al nuevo archivo,
      "use": "@vercel/python"
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "api/index.py" # Apuntamos a la funci√≥n "index" dentro de "api"
    },
    {
      "src": "/favicon.ico",
      "dest": "dashboard-frontend/dist/favicon.ico"
    },
    {
      "src": "/assets/(.*)",
      "dest": "dashboard-frontend/dist/assets/$1"
    },
    {
      "src": "/(.*)",
      "dest": "dashboard-frontend/dist/index.html"
    }
  ]
}