{
  "version": 2,
  "builds": [
    {
      "src": "api/app.py",
      "use": "@vercel/python"
    },
    {
      "src": "dashboard-frontend/package.json",
      "use": "@vercel/static-build",
      "config": {
        "outputDirectory": "dashboard-frontend/dist",
        "buildCommand": "npm run build"
      }
    }
  ],
  "routes": [
    { "src": "/api/(.*)", "dest": "/api/app.py" },
    { "src": "/(.*)", "dest": "/dashboard-frontend/dist/index.html" }
  ]
}
