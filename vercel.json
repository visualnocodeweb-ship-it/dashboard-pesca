{
  "version": 2,
  "outputDirectory": "dashboard-frontend/dist",
  "installCommand": "npm --prefix ./dashboard-frontend install",
  "buildCommand": "npm --prefix ./dashboard-frontend run build",
  "routes": [
    { "src": "/api/(.*)", "dest": "/api/app.py" },
    { "src": "/(.*)", "dest": "/index.html" }
  ],
  "builds": [
    {
      "src": "api/app.py",
      "use": "@vercel/python"
    }
  ]
}